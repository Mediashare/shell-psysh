#!/bin/bash

# Test script for Expect commands
# Tests PHPUnitExceptionAssertCommand with aliases

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
source "$SCRIPT_DIR/../../lib/func/loader.sh"
# Charger test_session_sync
source "$(dirname "$0")/../../lib/func/test_session_sync_enhanced.sh"

# V√©rifier que PROJECT_ROOT est d√©fini
if [[ -z "$PROJECT_ROOT" ]]; then
    PROJECT_ROOT="$(cd "$(dirname "$0")" && cd ../.. && pwd)"
    export PROJECT_ROOT
fi

init_test "Expect Commands"
echo ""

# Test original phpunit:expect-exception command
echo "üîç Testing original phpunit:expect-exception command..."
test_session_sync "Test exception expected" \
    --step "phpunit:expect-exception 'InvalidArgumentException' 'throw new InvalidArgumentException();'" \
    --expect "‚úÖ" \
    --context phpunit
echo ""

# Test original phpunit:expect-no-exception command
echo "üîç Testing original phpunit:expect-no-exception command..."
    --expect "‚úÖ" --context phpunit
test_session_sync "Test no exception expected" --step "phpunit:expect-no-exception 'echo \"No exception here\";'"
    --expect "‚úÖ" --context phpunit
echo ""

# Test new phpunit:assert-exception alias
echo "üîç Testing new phpunit:assert-exception alias..."
    --expect "‚úÖ" --context phpunit
test_session_sync "Test assertion exception" --step "phpunit:assert-exception 'RuntimeException' 'throw new RuntimeException(\"Test error\");'"
    --expect "‚úÖ" --context phpunit
echo ""

# Test new phpunit:assert-no-exception alias
echo "üîç Testing new phpunit:assert-no-exception alias..."
    --expect "‚úÖ" --context phpunit
test_session_sync "Test assertion no exception" --step "phpunit:assert-no-exception 'return 42;'"
    --expect "‚úÖ" --context phpunit
echo ""

# Test exception with message validation
echo "üîç Testing exception with message validation..."
    --expect "‚úÖ" --context phpunit
test_session_sync "Test exception expected" --step "phpunit:expect-exception 'Exception' 'throw new Exception(\"Custom message\");' --message='Custom message'"
    --expect "‚úÖ" --context phpunit
echo ""

# Test expected failure - no exception when one is expected
echo "üîç Testing expected failure - no exception when one is expected..."
    --expect "‚úÖ" --context phpunit
test_session_sync "Test exception expected" --step "phpunit:expect-exception 'Exception' 'echo \"No exception here\";'"
    --expect "‚úÖ" --context phpunit
echo ""

# Test expected failure - exception when none is expected
echo "üîç Testing expected failure - exception when none is expected..."
    --expect "‚úÖ" --context phpunit
test_session_sync "Test no exception expected" --step "phpunit:expect-no-exception 'throw new Exception(\"Unexpected exception\");'"
    --expect "‚úÖ" --context phpunit
echo ""

# Test combined scenarios with other commands
echo "üîç Testing combined scenarios..."
    --expect "‚úÖ" --context phpunit
test_session_sync "Test assertion no exception" --step "phpunit:assert-no-exception 'return 123;'; phpunit:assert-equals 123 123"
    --expect "‚úÖ" --context phpunit
echo ""

test_summary
